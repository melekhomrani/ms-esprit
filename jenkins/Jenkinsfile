pipeline {
    agent any

    environment {
        NEXUS_URL = 'http://localhost:8081'
        NEXUS_REPO = 'maven-releases'
        NEXUS_CRED = credentials('nexus-credentials')
    }

        stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Start mail-dev') {
            steps {
                echo 'Starting mail-dev...'
                sh 'docker compose up -d mail-dev'
            }
        }

        stage('Build JARs') {
            steps {
                echo 'Building JARs...'
                sh 'chmod +x ./jenkins/scripts/build_jars.sh'
                sh './jenkins/scripts/build_jars.sh'
            }
        }

        stage('Deploy to Nexus') {
            steps {
                echo 'Deploying JARs to Nexus...'
                sh 'chmod +x ./jenkins/scripts/nexus-deploy.sh'
                sh './jenkins/scripts/nexus-deploy.sh'
            }
        }

        stage('Start zookeeper'){
            steps {
                echo 'Starting Zookeeper...'
                sh 'docker compose up -d zookeeper'
            }
        }

        stage('Deploy with docker compose') {
            steps {
                echo 'Deploying with Docker Compose...'
                sh 'chmod +x ./jenkins/scripts/deploy-docker-compose.sh'
                sh './jenkins/scripts/deploy-docker-compose.sh'
            }
        }

        // stage('Build Docker Images') {
        //     steps {
        //         echo 'Building Docker images...'
        //         sh 'chmod +x ./jenkins/scripts/build-docker.sh'
        //         sh './jenkins/scripts/build-docker.sh'
        //     }
        // }

        // stage('Push Images to Minikube') {
        //     steps {
        //         echo 'Pushing Docker images to Minikube daemon...'
        //         sh 'chmod +x ./jenkins/scripts/push-minikube.sh'
        //         sh './jenkins/scripts/push-minikube.sh'
        //     }
        // }

        // stage('Deploy to Kubernetes') {
        //     steps {
        //         echo 'Deploying to Kubernetes...'
        //         sh 'chmod +x ./jenkins/scripts/deploy-k8s.sh'
        //         sh './jenkins/scripts/deploy-k8s.sh'
        //     }
        // }
    }

    post {
        success {
            echo 'Pipeline completed successfully. All services are built, deployed to Nexus, and running.'
            mail to: 'melek@store.com',
                subject: "Jenkins Pipeline Success: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """\
                    The Jenkins pipeline for ${env.JOB_NAME} has completed successfully.

                    Check details and console output:
                    ${env.BUILD_URL}

                    No action is required.
                    """
        }
        failure {
            echo 'Pipeline failed.'
            mail to: 'melek@store.com',
                subject: "Jenkins Pipeline Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """\
                    The Jenkins pipeline for ${env.JOB_NAME} has failed.

                    Check details and console output:
                    ${env.BUILD_URL}

                    Action is required.
                    """
        }
    }
}